<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:color">@color/colorBlueGrey900</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@null</item>
    </style>

    <style name="Views">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/padding_10</item>
        <item name="android:paddingTop">@dimen/padding_10</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/txt_size_22</item>
    </style>

    <style name="radioButton">
        <item name="android:layout_width">@dimen/width_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/txt_size_15</item>
        <item name="android:textColor">@color/colorBlueGrey800</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/colorRed300</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:alpha">.55</item>
    </style>

    <style name="border">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_1</item>
        <item name="android:layout_margin">@dimen/margin_15</item>
        <item name="android:background">@color/colorBlueGrey300</item>
    </style>

    <style name="submit_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_8</item>
        <item name="android:paddingRight">@dimen/padding_8</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/button_shape</item>
    </style>

    <!--Score Layout-->

    <style name="mainTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/txt_size_26</item>
        <item name="android:textColor">@color/colorRed700</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/margin_10</item>
    </style>

    <style name="secondaryTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/txt_size_19</item>
        <item name="android:textColor">@color/colorGrey900</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/margin_10</item>
    </style>

    <style name="answerViews">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/width_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/txt_size_15</item>
        <item name="android:textColor">@color/colorBlueGrey800</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/margin_8</item>
        <item name="android:layout_marginRight">@dimen/margin_8</item>
    </style>

    <style name="questions_2">
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:textColor">@color/colorBlueGrey800</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/width_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/margin_8</item>
        <item name="android:layout_marginRight">@dimen/margin_8</item>
    </style>

    <!--World Layout-->

    <style name="title">
        <item name="android:textSize">@dimen/txt_size_48</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/courgette</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@id/europe_quiz</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingBottom">@dimen/padding_24</item>
    </style>

    <style name="categories">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/txt_size_32</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/happy_monkey</item>
    </style>

</resources>